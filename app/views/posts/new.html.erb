<!-- app/views/posts/new.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>New Post</title>
  <%# <link rel="stylesheet" href="/assets/styles.css"> %>
</head>
<body>
  <h2>Create a New Post</h2>

  <%= form_for([@user, @post]) do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :text %>
      <%= f.text_area :text %>
    </div>

    <div>
      <%= f.submit "Create Post" %>
    </div>
  <% end %>

  <%= link_to "Back to All Posts", user_posts_path(@user) %>
</body>
</html>
